---
title: 'אירועים'
backgroundImage: '/images/events-bg.jpg'
---

{% extends 'layouts/page.njk' %} {% block pageContent %}

  {% if collections.events.futureEvents.length > 0 %} <h3 class="event-page-subheader">אירועים קרובים</h3><div class="events">  
{% for event in collections.events.futureEvents %}

  <div class="event-box-wrapper {{ event.data.background }}-bg">
    <div class="event-box">
      <div class="event-box__date">
        {{
          event.data.date.toLocaleDateString('he-IL', {
            weekday: 'long',
            month: 'short',
            day: 'numeric'
          })
        }},
        {{ event.data.date.toLocaleTimeString('he-IL', { hour: '2-digit', minute: '2-digit' }) }}
      </div>
      <h3 class="event-box__title">{{ event.data.title_he }}</h3>
      <div class="event-box__description">
        {{ event.data.description_he }}
      </div>
      {% if event.data.event_url %}
      <a href="{{ event.data.event_url }}" target="_blank">אירוע פייסבוק</a>
      {% endif %}
    </div>
  </div>
  {% endfor %} </div>{% endif %} 
  <h3 class="event-page-subheader">אירועים קודמים</h3>
  <div class="events">
{% for event in collections.events.pastEvents %}
  <div class="event-box-wrapper {{ event.data.background }}-bg">
    <div class="event-box">
      <div class="event-box__date">
        {{
          event.data.date.toLocaleDateString('he-IL', {
            weekday: 'long',
            month: 'short',
            day: 'numeric'
          })
        }},
        {{ event.data.date.toLocaleTimeString('he-IL', { hour: '2-digit', minute: '2-digit' }) }}
      </div>
      <h3 class="event-box__title">{{ event.data.title_he }}</h3>
      <div class="event-box__description">
        {{ event.data.description_he }}
      </div>
      {% if event.data.event_url %}
      <a href="{{ event.data.event_url }}" target="_blank">אירוע פייסבוק</a>{% endif %} 
    </div>
</div>{% endfor %}</div>
{% endblock %}
